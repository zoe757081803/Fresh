<!--pages/component/index/index.wxml-->
<view class="main">
    <swiper indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true">
        <block wx:for="{{imgUrls}}" wx:key="key">
            <swiper-item>
                <image src="{{item.pic}}" class="slide-image" width="100%"/>
            </swiper-item>
        </block>
    </swiper>
    
    <view class="selected">
        <view class="select-title">
        <text>精选主题</text>
        </view>
    <view class="select-top">
            <view class="select-top-small">
                <navigator url="../list/list">
                    <image src="../../../images/s1.png"></image>
                </navigator>
            </view>
            <view class="select-top-small">
                <navigator url="../list/list">
                    <image src="../../../images/s2.png"></image>
                </navigator>
            </view>
        </view>
        <view class="select-bottom">
            <navigator url="../list/list">
                <image src="../../../images/s3.png"></image>
            </navigator>
        </view>
    </view>
    
    <view class="newest">
        <view class="newest-title"><text>最近新品</text></view>
        <view class="newest-box">
            <view class="newest-list">
                <navigator url="../details_bxg/details_bxg">
                    <image src="../../../images/bxg.png"></image>
                    <view class="newest-text"><text>百香果 中果12个装</text></view>
                    <view class="newest-text"><text>￥ 18.9</text></view>
                </navigator>
            </view>
            <view class="newest-list">
                <navigator url="../details_xm/details_xm">
                    <image src="../../../images/xm.png"></image>
                    <view class="newest-text"><text>智利 进口西梅 约500g</text></view>
                    <view class="newest-text"><text>￥ 29.9</text></view>
                </navigator>
            </view>
            <view class="newest-list">
                <navigator url="../details_cm/details_cm">
                    <image src="../../../images/cm.png"></image>
                    <view class="newest-text"><text>红颜玖玖草莓</text></view>
                    <view class="newest-text"><text>￥ 29.9</text></view>
                </navigator>
            </view>
            <view class="newest-list">
                <navigator url="../details_hlg/details_hlg">
                    <image src="../../../images/hlg.png"></image>
                    <view class="newest-text"><text>越南进口红心火龙果</text></view>
                    <view class="newest-text"><text>￥ 16.9</text></view>
                </navigator>
            </view>
        </view>    
    </view>
</view>
